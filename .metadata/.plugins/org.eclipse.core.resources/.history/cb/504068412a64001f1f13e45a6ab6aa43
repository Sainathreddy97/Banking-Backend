spring.application.name=banking-service
server.port=8012

server.error.include-message=always

# MySQL Database Configuration
spring.datasource.url=jdbc:mysql://localhost:3306/bankproject
spring.datasource.username=root
spring.datasource.password=toor

# Hibernate Configuration
#spring.jpa.hibernate.ddl-auto=update
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQLDialect

# Logging Configuration
logging.level.com.example=TRACE
spring.output.ansi.enabled=always
logging.file.name=loggers.log
logging.pattern.file=%d{yyyy-MM-dd HH:mm:ss.SSS} [%level] %c{1.} [%t] %m%n

# Flyway Configuration
logging.level.org.flywaydb=DEBUG
spring.flyway.baseline-on-migrate=true
spring.flyway.enabled=true
spring.flyway.url=jdbc:mysql://localhost:3306/bankproject
spring.flyway.user=root
spring.flyway.password=toor
spring.flyway.locations=classpath:db/migration

